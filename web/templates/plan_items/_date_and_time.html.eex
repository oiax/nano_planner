<div class="row">
  <div class="col-12 date-and-time">
    <div>
      <%= text_input @f, :"#{@prefix}_date",
        class: "form-control pikaday", required: true %>
        <span class="btn btn-info"><i class='fa fa-calendar'></i></span>
    </div>
    <div>
      <%= select_for_hours @f, :"#{@prefix}_hour" %> :
      <%= select_for_minutes @f, :"#{@prefix}_minute" %>
    </div>
  </div>
</div>
