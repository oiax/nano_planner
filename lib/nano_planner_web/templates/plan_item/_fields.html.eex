<div class="form-group">
  <%= label @f, :name, dgettext("plan_item", "Name") %>
  <%= bootstrap_text_input @f, :name %>
  <%= error_tag(@f, :name) %>
</div>
<div class="form-group">
  <%= label @f, :description, dgettext("plan_item", "Description") %>
  <%= bootstrap_textarea @f, :description, rows: 4 %>
  <%= error_tag(@f, :description) %>
</div>
<div class="form-group">
  <%= boostrap_custom_checkbox @f, :all_day,
    dgettext("plan_item", "All day") %>
</div>
<div class="form-group js-date-and-time d-none">
  <%= label @f, :starts_at, dgettext("plan_item", "Starts at") %>
  <%= render "_date_and_time.html", f: @f, prefix: "s", field: :starts_at %>
</div>
<div class="form-group js-date-and-time d-none">
  <%= label @f, :ends_at, dgettext("plan_item", "Ends at") %>
  <%= render "_date_and_time.html", f: @f, prefix: "e", field: :ends_at %>
</div>
<div class="form-group js-date-picker d-none">
  <%= label @f, :starts_on, dgettext("plan_item", "Starts on") %>
  <%= render "_date_picker.html", f: @f, field: :starts_on %>
</div>
<div class="form-group js-date-picker d-none">
  <%= label @f, :starts_on, dgettext("plan_item", "Ends on") %>
  <%= render "_date_picker.html", f: @f, field: :ends_on %>
</div>
