<%= form_for @changeset, plan_item_path(@conn, :create), fn f -> %>
  <div class="form-group">
    <%= label f, :name, "件名", class: "control-label" %>
    <%= text_input f, :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label f, :description, "説明", class: "control-label" %>
    <%= textarea f, :description, class: "form-control", rows: 4 %>
  </div>
  <div class="form-group">
    <%= submit "Submit", class: "btn btn-success" %>
  </div>
<% end %>
