<%= link to: plan_item_path(@conn, :edit, @item.id),
  class: "btn btn-secondary btn-sm" do %>
  <i class="fa fa-pencil-square"></i> 変更
<% end %>
<%= link to: plan_item_path(@conn, :delete, @item.id), method: :delete,
  data: [confirm: "本当に削除しますか？"], class: "btn btn-secondary btn-sm" do %>
  <i class="fa fa-trash"></i> 削除
<% end %>
